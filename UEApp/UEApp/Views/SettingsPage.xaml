<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:local="clr-namespace:UEApp;assembly=UEApp"
            x:Class="UEApp.SettingsPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Spacing="7.5" Margin="15">
            <Button Text="User Settings" FontSize="Medium" HorizontalOptions="StartAndExpand" TextColor="{StaticResource PrimaryTextColor}"
                    Clicked="User_Button_Clicked" BackgroundColor="Transparent"/>
            <BoxView Color="Black" HeightRequest="1" Opacity="0.02"/>
            <Button Text="Notifications" FontSize="Medium" HorizontalOptions="StartAndExpand" TextColor="{StaticResource PrimaryTextColor}"
                    Clicked="Notif_Button_Clicked" BackgroundColor="Transparent"/>
            <BoxView Color="Black" HeightRequest="1" Opacity="0.02"/>
            <StackLayout Orientation="Horizontal" Padding="13,13">
                <Label Text="Location" FontSize="Medium" HorizontalOptions="StartAndExpand" TextColor="{StaticResource PrimaryTextColor}"/>
                <Switch IsToggled="True" Toggled="Location_Switch_Toggled" HorizontalOptions="EndAndExpand"/>
            </StackLayout>
            <BoxView Color="Black" HeightRequest="1" Opacity="0.02"/>
            <Button Text="User Manual" FontSize="Medium" HorizontalOptions="StartAndExpand" TextColor="{StaticResource PrimaryTextColor}"
                    Clicked="Manual_Button_Clicked" BackgroundColor="Transparent"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>